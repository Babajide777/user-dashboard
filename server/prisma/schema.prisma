generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  username String @unique
  roleId String @db.ObjectId
  status String
  password String
  role Role @relation(fields: [roleId], references: [id])
}

model Role {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}